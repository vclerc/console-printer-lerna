{
  "ignoreChanges": [
    "**/*.md"
  ],
  "command": {
    "bootstrap": {
      "hoist": true
    },
    "version": {
      "allowBranch": [
        "master",
        "dev",
        "feature/*",
        "fix/*"
      ],
      "conventional-commits": true,
      "force-publish": [
        "@vclerc/console-wrapper"
      ],
      "create-release": true,
      "message": "chore(release): publish %v"
    }
  },
  "packages": [
    "packages/*"
  ],
  "version": "0.2.3"
}
